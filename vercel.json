{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "index.html",  "use": "@vercel/static" },
    { "src": "account.html","use": "@vercel/static" },
    { "src": "manifest.json","use": "@vercel/static" },
    { "src": "icons/**",    "use": "@vercel/static" },
    { "src": "data/**",     "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)",     "dest": "/$1" }
  ]
}
